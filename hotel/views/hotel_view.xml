                                    <field name="product_uom_qty" />
                                    <field name="price_unit" />
                                    <field domain="[('type_tax_use','=','sale'),('company_id','=',parent.company_id)]" name="tax_id" options="{'no_create': True}" widget="many2many_tags" />
